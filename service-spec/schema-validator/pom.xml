<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>service-spec</artifactId>
		<groupId>io.hyscale</groupId>
		<version>0.9.4.1</version>
	</parent>
	
	<properties>
	    <hspec.supported.version>0.6.1.1</hspec.supported.version>
		<hprof.supported.version>0.6.1.1</hprof.supported.version>
	</properties>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>schema-validator</artifactId>
	<name>schema-validator</name>

	<dependencies>
		<dependency>
			<groupId>com.github.java-json-tools</groupId>
			<artifactId>json-schema-validator</artifactId>
		</dependency>
		<dependency>
			<groupId>io.hyscale</groupId>
			<artifactId>commons</artifactId>
		</dependency>
    </dependencies>
    
    <build>
    <plugins>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <version>1.5.0</version>
                <executions>
                    <execution >
                     <id>hspec-service-json-download</id>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                                <mkdir dir="src/main/resources/hspec/${hspec.supported.version}"/>
                                <url>https://raw.githubusercontent.com/hyscale/hyscale/master/service-spec/schema-validator/src/main/resources/hspec/${hspec.supported.version}/service-spec.json</url>
                                <outputDirectory>src/main/resources/hspec/${hspec.supported.version}</outputDirectory>
                        </configuration>
                 </execution> 
                 
                 <execution>
                         <id>hprof-service-json-download</id>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                                <mkdir dir="src/main/resources/hprof/${hprof.supported.version}"/>
                                <url>https://raw.githubusercontent.com/hyscale/hyscale/master/service-spec/schema-validator/src/main/resources/hprof/${hprof.supported.version}/profile-spec.json</url>
                                <outputDirectory>src/main/resources/hprof/${hprof.supported.version}</outputDirectory>
                        </configuration>
                 </execution> 
                </executions>
            </plugin>

        </plugins>
        </build>
</project>
